---
export interface Props {
    title: string;
	description: string;
	link?: string;
    time?: TimeRanges;
    date?: string;
    location?: string;
}

const { title, description, link, date } = Astro.props;
---
<div class='container w-auto max-w-7xl h-auto my-2 flex flex-col justify-center border shadow-lg rounded-lg border-slate-700 p-4 bg-slate-500/30'>
    <h2>{title}</h2>
    <p class='py-2'>{description}</p>
    <a class='' href={link} target='_blank'>{link}</a>
    <p class="font-bold">Location: TBA..</p>
    <p class="font-bold">Time: TBA..</p>
    <p class="font-bold">Date: {date}</p>
    
</div>
