---
export interface Props {
	text: string;
	link: string;
    target?: string;
}

const { text, link, target } = Astro.props;
---
<div class='join-button flex justify-center my-4 min-w-[132px] min-[4000px]:min-w-[140px]'>
    <a class='text-white font-bold px-3 py-2 border-2 border-white bg-slate-700 hover:text-orange-400 hover:border-orange-400  rounded-md' href={link} target={target}>
        {text}
    </a>
</div>
